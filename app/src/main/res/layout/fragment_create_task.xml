<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/name_task"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameTaskTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColorHint="#BEBEBE"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameTaskInputEditText"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/text_input_style"
                android:drawablePadding="12dp"
                android:hint="@string/example_learn_english"
                android:textColorHint="#BEBEBE" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/description_"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColorHint="#BEBEBE"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descriptionInputEditText"
                android:layout_width="fill_parent"
                android:layout_height="94dp"
                android:background="@drawable/text_input_style"
                android:drawablePadding="12dp"
                android:gravity="start"
                android:hint="@string/for_example_you_can_leave_links_to_important_materials_in_the_description"
                android:textColorHint="#BEBEBE" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/picture"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/please_put_a_picture_of_a_white_background"
                android:textColor="#BEBEBE"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addPictureImageViewLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/background_task"
            android:backgroundTint="@color/white"
            android:elevation="3dp"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/plus"
                android:textColor="#BEBEBE"
                android:textSize="20sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/addPictureImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="TODO"
                android:padding="8dp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/createTask0Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/standart_button_style"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/create_task"
        android:textSize="14sp"
        app:backgroundTint="@color/primary_color"
        app:icon="@drawable/kanban"
        app:iconGravity="textEnd"
        app:iconSize="24dp" />

</LinearLayout>