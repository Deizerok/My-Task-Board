<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskViewHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@drawable/background_task"
    android:elevation="5dp"
    android:focusable="true"
    android:orientation="vertical"
    app:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:background="@drawable/radius_8"
            android:gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:src="@drawable/task_1_icon"
                android:id="@+id/iconImageView"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <TextView
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16dp"
            android:layout_margin="12dp"
            android:text="Clear House"
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="#6E6E70"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:text="@string/time_spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/timer"
        android:layout_width="14dp"
        android:layout_height="14dp"/>

    <TextView
        android:textColor="@color/white"

        android:layout_marginStart="8dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:text="1h 10m"
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </LinearLayout>

</LinearLayout>